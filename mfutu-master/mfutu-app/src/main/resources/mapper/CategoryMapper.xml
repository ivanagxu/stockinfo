<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ivan.mfutu.mapper.CategoryMapper">
    <select id="getAll" resultMap="com.ivan.mfutu.mapper.ResultMapper.CategoryResultMap">
        select code,name,industry,sub_industry,market,level,currency from category where 0 = 0
    </select>
    
    <select id="getByCode" resultMap="com.ivan.mfutu.mapper.ResultMapper.CategoryResultMap">
        select code,name,industry,sub_industry,market,level,currency from category where code = #{code}
    </select>

    <insert id="insert">
    	insert into category(code,name,industry,sub_industry,market,level,currency) 
    	values (#{code},#{name},#{industry},#{subIndustry},#{market},#{level},#{currency})
    </insert>
    
    <delete id="update">
    	update category set name=#{name}, industry=#{industry}, sub_industry=#{subIndustry}, market=#{market}, level=#{level}, currency=#{currency} where code = #{code}
    </delete>
</mapper>
